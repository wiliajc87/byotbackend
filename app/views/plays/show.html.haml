%h1= @play.title
%h2 Directors
%ul
- @directors.each do |director|
  %li= "#{director.first_name} #{director.last_name}"
%h2 Writers
%ul
- @writers.each do |writer|
  %li= "#{writer.first_name} #{writer.last_name}"
%h2 Actors
%ul
- @actors.each do |actor|
  %li= "#{actor.first_name} #{actor.last_name}"
- if @others.count != 0
  %h2 Others
  %ul
  - @others.each do |other|
    %li= "#{other.participant.first_name} #{other.participant.last_name}--#{other.role}"